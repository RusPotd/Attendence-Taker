    <TextView
        android:id="@+id/attendence_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:text="@string/hello_blank_fragment"
        android:textSize="18sp"
        android:textStyle="bold" />
    </ScrollView>

